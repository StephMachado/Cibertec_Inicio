@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers

@{
    ViewBag.Title = "Lista de Productos";
}


@helper DisplayPriceRazor(double price)
{
if (price == 0.0)
{
        <span>Free!!!</span>
}
else
{
        <span>price</span>
}
}

@helper DisplayDateOrNull(DateTime? date)
{
if (date == null)
{
     <span>Free!!!</span>
}
else
{
        <span>
            @date.Value.ToString("dd/MM/yyyy");
        </span>
}
}


<h2>Products</h2>
<ul>
    @foreach (var item in Model)
    {
        <li>
            <span>@item.Description</span>
            @DisplayPriceRazor(item.Price)
            <div>
                @CustomHelper.DisplayPriceStatic(item.Price)
            </div>
            <div>
                @Html.DisplayPriceExtension(item.Price)
            </div>

            <span>
                Razor: @DisplayDateOrNull(item.Date);
            </span>

            <span>
                Static: @CustomHelper.DisplayDateOrNullStatic(item.Date)
            </span>
            <span>
                Extension: @Html.DisplayDateOrNullExtension(item.Date)
            </span>

        </li>
    }
</ul>
